copy() {
  if [ -t 0 ]; then
    # Called with an argument (e.g., copy myfile.txt)
    content=$(<"$1")
  else
    # Piped input (e.g., cat file | copy)
    content=$(cat)
  fi
  printf "%s" "$content" | xclip -selection clipboard
}

align() {
  file="$1"
  delim=$(head -n 1 "$file" | \
    awk 'BEGIN{FS=""} {
      for (i = 1; i <= NF; i++) {
        if ($i ~ /[\t,;|]/) freq[$i]++
      }
      max = 0
      for (k in freq) if (freq[k] > max) { max = freq[k]; best = k }
      print best
    }')

  awk -v FS="$delim" 'BEGIN { OFS="\t" } { print $0 }' "$file" | column -t -s $'\t'
}
